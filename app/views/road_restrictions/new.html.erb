<div class="col-xs-4">
  <h3>New Road Restriction</h3>
  <%= form_for @restriction, remote: true, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <%= f.label :road_segment_name, "Affected Road Segment / Intersection" %>
        <%= f.text_field :road_segment_name, class: 'form-control segment_name' %>
        <a class="geolocate btn btn-danger margin-top btn-xs">Geolocate</a>
      </div>
      <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <%= hidden_field_tag :lat %>
      <%= hidden_field_tag :long %>
      <%= f.submit 'Create Restriction', class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="col-xs-8">
  <div id="map"></div>
</div>

<script type="text/javascript">
  $(function() {
    initRoadRestriction()
  });
</script>