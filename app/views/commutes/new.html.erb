<div class="col-xs-4">
  <h3>Register a Commute</h3>
  <%= form_for @commute, remote: true, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <%= label_tag :point_a, 'Point A'  %>
        <%= text_field_tag :point_a, nil, class: 'form-control segment_name' %>
      </div>
      <div class='form-group'>
        <%= label_tag :point_b, 'Point B'    %>
        <%= text_field_tag :point_b, nil, class: 'form-control segment_name' %>
        <a class="map_route btn btn-danger margin-top btn-xs">Map Route</a>
      </div>
      <%= fields_for :commuter do |commuter_form| %>
        <div class='form-group'>
          <%= commuter_form.label :email_address  %>
          <%= commuter_form.text_field :email_address, class: 'form-control segment_name' %>
        </div>
        <div class='form-group'>
          <%= commuter_form.label :name, 'First name'  %>
          <%= commuter_form.text_field :name, class: 'form-control segment_name' %>
        </div>
      <% end %>
      <div class='form-group'>
        <%= f.label :name, 'Give the commute a short name (e.g. Work or School)'  %>
        <%= f.text_field :name, class: 'form-control segment_name' %>
      </div>
      <%= hidden_field_tag :route_steps %>
      <%= f.submit 'Register', class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="col-xs-8">
  <div id="map"></div>
</div>
<script type="text/javascript">
  $(function() {
    initCommute();
  });
</script>
